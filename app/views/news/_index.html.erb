<p id="notice"><%= notice %></p>

<h1>News</h1>


<%= link_to 'New News', new_news_path, class: 'news-new', remote: true %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_all.each do |news| %>
      <tr>
        <td class="cms-img"><%= image_tag news.image.url %></td>
        <td><%= news.title %></td>
        <td><%= news.url %></td>
        <td><%= link_to 'Show', news, class: 'news-show', remote: true %></td>
        <td><%= link_to 'Edit', edit_news_path(news), class: 'news-edit', remote: true %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
