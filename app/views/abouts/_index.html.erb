<p id="notice"><%= notice %></p>

<h1>About</h1>

<div class="new-about-link"><%= link_to 'New About', new_about_path, class: 'about-new', remote: true %></div>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abouts.each do |about| %>
      <tr>
        <td><%= image_tag about.image.url, class:"cms-img" %></td>
        <td><%= about.text %></td>
        <td><%= link_to 'Show', about, class: 'about-show', remote: true %></td>
        <td><%= link_to 'Edit', edit_about_path(about), class: 'about-edit', remote: true %></td>
        <td><%= link_to 'Destroy', about, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
