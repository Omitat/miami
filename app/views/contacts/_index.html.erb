<p id="notice"><%= notice %></p>

<h1>Contacts</h1>
<%= link_to 'New Contact', new_contact_path, class: 'contact-new', remote: true %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.title %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Show', contact, class: 'contact-show', remote: true %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: 'contact-edit', remote: true %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
